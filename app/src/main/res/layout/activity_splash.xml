<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/nearby"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_place_white_48dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" What\'s \n Nearby"
            android:id="@+id/nearbyTxt"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView8"
        android:src="@drawable/ic_layers_white_24dp"
        android:layout_above="@+id/nearby"
        android:layout_toStartOf="@+id/nearby"
        android:scaleType="centerInside" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_flight_white_24dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView7"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_hotel_white_24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView3"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_local_cafe_white_24dp"
        android:layout_below="@+id/nearby"
        android:layout_toEndOf="@+id/nearby" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView4"
        android:src="@drawable/ic_local_dining_white_24dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignStart="@+id/imageView6"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView5"
        android:src="@drawable/ic_local_gas_station_white_24dp"
        android:layout_above="@+id/nearby"
        android:layout_toEndOf="@+id/nearby"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView6"
        android:src="@drawable/ic_local_grocery_store_white_24dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView7"
        android:src="@drawable/ic_local_atm_white_24dp"
        android:layout_below="@+id/nearby"
        android:layout_toStartOf="@+id/nearby"
        android:scaleType="centerInside" />

</RelativeLayout>
